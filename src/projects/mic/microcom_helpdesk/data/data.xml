<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ____________________Data Task Source________________________________ -->
            <record model="task.source" id="task_source_call">
                <field name="name">Call</field>
            </record>
            <record model="task.source" id="task_source_email">
                <field name="name">Email</field>
            </record>
            <record model="task.source" id="task_source_project">
                <field name="name">Project</field>
            </record>

        <!-- ____________________Data Task Type -->
            <record model="task.ticket.type" id="task_type_problem">
                <field name="name">Problem</field>
            </record>
            <record model="task.ticket.type" id="task_type_purchase">
                <field name="name">Purchase</field>
            </record>
            <record model="task.ticket.type" id="task_type_question">
                <field name="name">Question</field>
            </record>
            <record model="task.ticket.type" id="task_type_change">
                <field name="name">Change</field>
            </record>
            <record model="task.ticket.type" id="task_type_incident">
                <field name="name">Incident</field>
            </record>
            <record model="task.ticket.type" id="task_type_request">
                <field name="name">Request</field>
            </record>
            <!-- _____________________Stage for helpdesk________________ -->
        <record id="helpdesk_stage_draft" model="project.task.type">
            <field name="sequence">90</field>
            <field name="name">Draft</field>
            <field name="project_type">helpdesk</field>
        </record>

        <record id="helpdesk_stage_new" model="project.task.type">
            <field name="sequence">91</field>
            <field name="name">New</field>
            <field name="project_type">helpdesk</field>
        </record>

        <record id="helpdesk_stage_inprogress" model="project.task.type">
            <field name="sequence">92</field>
            <field name="name">In Progress</field>
            <field name="project_type">helpdesk</field>
        </record>

        <record id="helpdesk_stage_hold" model="project.task.type">
            <field name="sequence">93</field>
            <field name="name">On Hold</field>
            <field name="project_type">helpdesk</field>
        </record>

        <record id="helpdesk_stage_followup" model="project.task.type">
            <field name="sequence">94</field>
            <field name="name">Follow-up</field>
            <field name="project_type">helpdesk</field>
        </record>

        <record id="helpdesk_stage_canceled" model="project.task.type">
            <field name="sequence">95</field>
            <field name="name">Canceled</field>
            <field name="project_type">helpdesk</field>
        </record>

        <record id="helpdesk_stage_solved" model="project.task.type">
            <field name="sequence">96</field>
            <field name="name">Solved</field>
            <field name="project_type">helpdesk</field>
        </record>
        <record id="helpdesk_stage_closed" model="project.task.type">
            <field name="sequence">97</field>
            <field name="name">Closed</field>
            <field name="project_type">helpdesk</field>
        </record>
    </data>
</odoo>
